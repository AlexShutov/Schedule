<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rec_record_no"
        android:textSize="@dimen/add_rec_label_text_size" />

    <EditText
        android:id="@+id/positionField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_rec_hint_record_no"
        android:inputType="number"
        android:textSize="@dimen/add_rec_edit_field_text_size" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_rec_timepicker_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_rec_begin_time"
                android:textSize="10dp" />

            <TimePicker
                android:id="@+id/begTimePicker"
                android:layout_width="@dimen/add_rec_timepicker_width"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/add_rec_timepicker_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/add_rec_end_time"
                android:textSize="10dp" />

            <TimePicker
                android:id="@+id/endTimePicker"
                android:layout_width="@dimen/add_rec_timepicker_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="1dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rec_subject_name"
        android:textSize="@dimen/add_rec_label_text_size" />

    <EditText
        android:id="@+id/subjectNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_rec_hint_subject_name"
        android:textSize="@dimen/add_rec_edit_field_text_size" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rec_teacher_first_name"
        android:textSize="@dimen/add_rec_label_text_size" />

    <EditText
        android:id="@+id/teacherFirstNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:height="6dp"
        android:hint="@string/add_rec_hint_teacher_fn"
        android:textSize="@dimen/add_rec_edit_field_text_size" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rec_teacher_last_name"
        android:textSize="@dimen/add_rec_label_text_size" />

    <EditText
        android:id="@+id/teacherLastNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_rec_hint_teacher_ln"
        android:textSize="@dimen/add_rec_edit_field_text_size" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rec_teacher_middle_name"
        android:textSize="@dimen/add_rec_label_text_size" />

    <EditText
        android:id="@+id/teacherMiddleNameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_rec_hint_teacher_mn"
        android:textSize="@dimen/add_rec_edit_field_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="лек/прак"
                android:textSize="@dimen/add_rec_label_text_size" />

            <EditText
                android:id="@+id/lessonTypeField"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_rec_hint_lesson_type"
                android:textSize="@dimen/add_rec_edit_field_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="номер аудитории"
                android:textSize="@dimen/add_rec_label_text_size" />

            <EditText
                android:id="@+id/roomDescField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/add_rec_hint_room_no"
                android:textSize="@dimen/add_rec_edit_field_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_rec_button_height"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/addButton"
            android:layout_width="@dimen/add_rec_button_width"
            android:layout_height="fill_parent"
            android:layout_weight="0.95"
            android:text="@string/add_rec_add_button_text" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="@dimen/add_rec_button_width"
            android:layout_height="fill_parent"
            android:layout_weight="0.77"
            android:text="@string/add_rec_cancel_button_text" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Alex/AndroidStudioProjects/Schedule/app/src/main/res/layout-mdpi/add_record_screen_layout.xml -->